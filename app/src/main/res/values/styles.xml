<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/bhActionBar</item>
        <!--<item name="android:windowBackground"></item>-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="bhActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/bg_actionbar_tiled</item>
        <item name="android:backgroundSplit">@drawable/bg_actionbar_tiled</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="EnableBluetoothTheme" parent="android:Theme.Holo.NoActionBar"></style>


    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="OverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/bhActionBar</item>
        <!--<item name="android:windowBackground"></item>-->
        <item name="android:statusBarColor">@color/primary_material_dark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="android:navigationBarColor">@color/primary_material_dark</item>
        <item name="actionMenuTextAppearance">?android:attr/actionMenuTextAppearance</item>
    </style>

    <style name="bhActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/bg_actionbar_tiled</item>
        <item name="backgroundSplit">@drawable/bg_actionbar_tiled</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="subtitleTextStyle">@style/NoTitleText</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="icon">@android:color/transparent</item>
    </style>

    <style name="EnableBluetoothTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/accentColor</item>
    </style>

    <style name="ActionBarSubtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textColor">@color/accentColor</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <TableRow
        android:id="@+id/LDRtableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <QuickContactBadge
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:paddingRight="@dimen/padding_xsmall"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:textColor="@color/text_holo_light_blue"
            android:textSize="@dimen/foundDevices_name_text"
            android:textStyle="italic|bold" />
    </TableRow>

    <RelativeLayout
        android:id="@+id/LDRrelativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/LDRtableRow1"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/LdrPrgParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view"
            android:gravity="center|right"
            android:paddingRight="@dimen/padding_xsmall">

            <ProgressBar
                android:id="@+id/levelPrgBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:minHeight="1dip"
                android:minWidth="125dip"
                android:progress="35" />

            <TextView
                android:id="@+id/levelTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#bb000000"
                android:textSize="@dimen/levelIndicator_text"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/LdrPrgParent"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view"
            android:gravity="left|center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_xsmall">

            <TableRow
                android:id="@+id/LDRTableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/expTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Exp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TableRow
                    android:id="@+id/LDRchangeEXPTableRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/changeEXPImgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_change_up_s" />

                    <TextView
                        android:id="@+id/changeEXPTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/LDRtableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/devTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Dev"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TableRow
                    android:id="@+id/LDRchangeDEVTableRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/changeDEVImgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_change_up_s" />

                    <TextView
                        android:id="@+id/changeDEVTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>

            </TableRow>
        </LinearLayout>
    </RelativeLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LDRtableRow1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TextView
            android:id="@+id/rankTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="3."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TableRow
            android:id="@+id/LDRtableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/changeRankImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_change_up" />

            <TextView
                android:id="@+id/changeRankTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>

    </TableRow>

</RelativeLayout>